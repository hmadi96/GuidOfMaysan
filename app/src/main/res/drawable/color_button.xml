<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
<shape>
    <size
    android:height="49dp"
    android:width="50dp"/>

    <solid
        android:color="#D07FE3"/>
    <stroke
        android:color="#ffff"
        android:width="1dp"/>
    <corners
        android:radius="99dp"/>
</shape>
    </item>
    <item >
        <shape>
            <size
                android:height="49dp"
                android:width="50dp"/>

            <solid
                android:color="?attr/buttonBackgroundAttr"/>
            <stroke
                android:color="@color/colorPrimaryDark"
                android:width="1dp"/>
            <corners
                android:radius="99dp"/>
        </shape>
    </item>
</selector>