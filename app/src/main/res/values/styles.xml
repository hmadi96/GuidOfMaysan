<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="myTextColorAttr">@color/defaultTextColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="mainBackgroundAttr">@color/defaultBackgroundColor</item>
        <item name="cardbackground">@color/defaultBackgroundColor</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="textColorAlertDialogListItem">@color/defaultTextColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark application theme. status bar -->
    <style name="DarkTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="myTextColorAttr">@color/nightTextColor</item>
        <item name="mainBackgroundAttr">@color/nightBackgroundColor</item>
        <item name="cardbackground">@color/buttonBackgroundNight</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="textColorAlertDialogListItem">@color/nightTextColor</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.StyleSlash">
        <item name="android:fontFamily">@font/cairo_regular</item>
    <item name="android:windowFullscreen">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>
</resources>
